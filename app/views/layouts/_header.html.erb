<%= nav_bar :fixed => :top, :brand => "Auction", :brand_link => root_path, :responsive => true do %>
  <% menu_group do %>
    <%= menu_item "Home", root_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if signed_in? %>
      <%= menu_item "Продать", new_product_path %>
      <%= menu_item "Profile", user_path(current_user) %>
      <%= menu_item "Sign Out", signout_path, :method => 'delete' %>
    <% else %>
      <%= menu_item "Sign In", signin_path %>
    <% end %>
  <% end %>
<% end %>
