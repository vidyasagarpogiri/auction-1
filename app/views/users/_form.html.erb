<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Пароль ещё раз..." %>
  <%= f.password_field :password_confirmation %>

  <div class="actions">
  <%= f.submit "Создать мой аккаунт", class: "btn btn-large btn-primary" %>
  </div>

<% end %>
